<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddCityActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:id="@+id/add_city_toolbar"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市添加"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/add_city"
                android:layout_width="177dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_bg"
                android:hint="输入城市"
                android:layout_marginLeft="20dp"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/confirm_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="38dp"
                android:text="添加" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <Button
            android:id="@+id/hot_city_1"
            android:layout_width="68dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"

            android:layout_alignTop="@+id/hot_city_2"
            android:layout_marginStart="98dp"
            android:text="长沙" />

        <Button
            android:id="@+id/hot_city_2"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp"
            android:text="武汉" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="61dp"
            android:text="热门城市"
            android:textSize="15dp" />

        <Button
            android:id="@+id/hot_city_3"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/hot_city_1"
            android:layout_marginEnd="103dp"
            android:text="北京" />

        <Button
            android:id="@+id/hot_city_4"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/hot_city_1"
            android:layout_marginEnd="13dp"
            android:text="杭州" />

        <Button
            android:id="@+id/hot_city_5"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hot_city_1"
            android:layout_alignTop="@+id/hot_city_6"
            android:text="广州" />

        <Button
            android:id="@+id/hot_city_6"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="174dp"
            android:text="深圳" />

        <Button
            android:id="@+id/hot_city_7"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hot_city_3"
            android:layout_alignTop="@+id/hot_city_5"
            android:text="青岛" />

        <Button
            android:id="@+id/hot_city_8"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/hot_city_4"
            android:layout_alignTop="@+id/hot_city_5"
            android:text="天津" />


    </RelativeLayout>

</LinearLayout>